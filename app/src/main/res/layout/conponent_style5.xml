<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="95dp"
        android:layout_weight="6"
        android:orientation="vertical">

        <TextView
            android:id="@+id/CS5_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:maxLines="2"
            android:text="标题部分标题部分十一字标题部分标题部分十一字"
            android:textSize="20sp" />

        <!--只是一个分割线-->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/CS5_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:gravity="bottom"
                android:text="腾讯新闻 | 刚刚"
                android:textSize="12sp" />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="105dp"></LinearLayout>

    <ImageView
        android:id="@+id/CS5_pic"
        android:layout_width="0dp"
        android:layout_height="95dp"
        android:layout_weight="3"
        android:src="@drawable/pic_loading"></ImageView>

</LinearLayout>
